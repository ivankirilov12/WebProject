@model PcPartPicker.Data.Models.SystemBuild

@{
    ViewData["Title"] = "Edit";
}

<script src="@Url.Content("~/js/editBuild.js")"></script>
<h2>Edit</h2>

<h4>SystemBuild</h4>
<hr />
<div class="row" >
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SystemBuildId" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
