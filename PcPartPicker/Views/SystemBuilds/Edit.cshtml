                <label asp-for="Gpu" class="control-label"></label>
                <select id="gpuList" name="gpus"><option>Select a gpu</option></select>
            </div>
            <div class="form-group">
                <label asp-for="Case" class="control-label"></label>
                <select id="caseList" name="cases"><option>Select a case</option></select>
            </div>
            <div class="form-group">
                <label asp-for="Motherboard" class="control-label"></label>
                <select id="motherboardList" name="motherboards"><option>Select a motherboard</option></select>
            </div>
            <div class="form-group">
                <label asp-for="Storage" class="control-label"></label>
                <select id="storageList" name="storages"><option>Select a storage option</option></select>
            </div>
            <div class="form-group">
                <label asp-for="Ram" class="control-label"></label>
                <select id="ramList" name="rams"><option>Select a memory option</option></select>
            </div>
            @*<div class="form-group">
            <label asp-for="Price" class="control-label"></label>
            <input asp-for="Price" id="price" class="form-control" type="hidden"/>
            <span id="currentPrice"></span>
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>*@

            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description"></textarea>
            </div>
            <input asp-for="SystemBuildId" type="hidden" id="buildId" />
            <input asp-for="Cpu.Model" type="hidden" id="cpu" />
            <input asp-for="Gpu.Model" type="hidden" id="gpu" />
            <input asp-for="Motherboard.Model" type="hidden" id="mb" />
            <input asp-for="Case.Model" type="hidden" id="case" />
            <input asp-for="Ram.Model" type="hidden" id="ram" />
            <input asp-for="Storage.Model" type="hidden" id="storage" />

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
