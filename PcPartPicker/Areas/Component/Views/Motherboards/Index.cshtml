@model IEnumerable<PcPartPicker.Models.Models.Motherboard>

@{
    ViewData["Title"] = "Index";
}

<h2>Browse motherboards</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Model)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Manufacturer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CpuSocket)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Model)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Manufacturer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CpuSocket)
            </td>
            <td>
                @{
                    if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.MotherboardId">Edit</a> <text>|</text>
                        <a asp-action="Details" asp-route-id="@item.MotherboardId">Details</a> <text>|</text>
                        <a asp-action="Delete" asp-route-id="@item.MotherboardId">Delete</a>
                    }
                    else
                    {
                        <a asp-action="Details" asp-route-id="@item.MotherboardId">Details</a>
                    }
                }
            </td>
        </tr>
}
    </tbody>
</table>
